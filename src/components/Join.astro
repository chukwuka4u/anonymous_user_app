<script>
  const user = localStorage.getItem("user")

  if (user)
    if (JSON.parse(user).ended_at === null) {
      window.location.replace("/queue-member")
    }
    //we will still get replaced because nothing is changing the ended_at key
</script>
<script >
  import { joinQueue } from "../utils/requests"

  const button = document.getElementById("join-btn")
  const dialog = document.querySelector("#join-action") as HTMLDialogElement
  const clsbtn = document.querySelector("#close-btn")

  const el = document.getElementById("container")
  const queueId = el?.dataset.queueId
  const adminId = el?.dataset.adminId
  
  async function handleJoin() {
    const data = await joinQueue(adminId, queueId)
    //Store the data gotten, to be removed after your served
    localStorage.setItem("user", JSON.stringify(data))

    console.log(data)
    dialog?.showModal()
  }
  
  button?.addEventListener("click", handleJoin)
  clsbtn?.addEventListener("click", () => {
    window.location.replace("/queue-member")
    dialog?.close()
  })
  
</script>

