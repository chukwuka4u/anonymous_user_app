import Layout from "../layouts/Layout.astro";
---

<script>
  const usrStr = localStorage.getItem("user");
  const user = usrStr && JSON.parse(usrStr);

  import { getQueue, leaveQueue } from "../utils/requests";

  const button = document.getElementById("leave-btn")
  const dialog = document.querySelector("#leave-action") as HTMLDialogElement
  const clsbtn = document.querySelector("#close-btn")
  
  const queue = await getQueue(user.admin_id, user.queue_id)
  
  const addressEl = document.querySelector("#address")
  const currentCapEl = document.querySelector("#curr-cap")
  const totalCapEl = document.querySelector("#tot-cap")
  const positionel = document.querySelector("#position")
  const estWaitEl = document.querySelector("#est-wait")

  positionel!.textContent = user.position
  addressEl!.textContent = queue[0].address
  currentCapEl!.textContent = queue[0].current_capacity
  totalCapEl!.textContent = queue[0].queue_capacity

  const estimatedWait = queue[0].average_service_time == null ? (3 * Number(user.position)) : (Number(queue[0].average_service_time) * Number(user.position))
  
  estWaitEl!.textContent = `${estimatedWait} mins`
  
  async function handleLeave() {
    const data = await leaveQueue(user.admin_id, user.queue_id, user.user_id)
    
    dialog?.showModal()
  }
  
  button?.addEventListener("click", handleLeave)
  clsbtn?.addEventListener("click", () => {
    dialog?.close()
    window.location.replace(`/?pid=${user.queue_id}&aid=${user.admin_id}`)
    localStorage.removeItem("user")
  })
</script>

